<UserControl x:Class="WpfApp1.Entity.EntityFrameworkView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.Entity"
             xmlns:common="clr-namespace:WpfApp1.Common"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <common:SafeDoubleConverter  x:Key="SafeDoubleConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
            <DataGrid  Height="300"  x:Name="Log" Background="LightGray"  ItemsSource="{Binding People}" SelectedItem="{Binding SelectedPerson}"
   FontSize="14.5"     AutoGenerateColumns="False" CanUserAddRows="False" CanUserSortColumns="False"
   HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Binding="{Binding Id, Mode=TwoWay, 
                                UpdateSourceTrigger=PropertyChanged, Converter={StaticResource SafeDoubleConverter}}"  Width="80"/>
                    <DataGridTextColumn Header="Age" Binding="{Binding Age, Mode=TwoWay, 
              UpdateSourceTrigger=PropertyChanged, Converter={StaticResource SafeDoubleConverter}}"  Width="80"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name, Mode=TwoWay, 
              UpdateSourceTrigger=PropertyChanged, Converter={StaticResource SafeDoubleConverter}}"  Width="200"/>

                    <DataGridCheckBoxColumn Header="IsActive" Binding="{Binding IsActive}" Width="90"/>

                </DataGrid.Columns>
            </DataGrid>
        <Grid Height="50" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button  Height="50" Content="세로고침" Command="{Binding LoadCommand}"/>
                <Button Grid.Column="1" Height="50" Content="추가" Command="{Binding AddCommand}"/>
                <Button Grid.Column="2" Height="50" Content="삭제" Command="{Binding DeleteCommand}"/>
                <Button Grid.Column="3" Height="50" Content="저장" Command="{Binding SaveCommand}"/>
            </Grid>
    </Grid>
</UserControl>
